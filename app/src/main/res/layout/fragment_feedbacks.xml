<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".Salon.SalonMenuFragments.Feedbacks">

    <TextView
        android:id="@+id/feedbackWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:text="No any feedback"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/feedbackLoading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/multi_color_loading" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedbacksRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>