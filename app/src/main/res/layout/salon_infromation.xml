<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="11dp"
        android:orientation="vertical"
        android:paddingBottom="51dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill the Salon Details"
            android:textColor="@color/icon_color"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Please fill the input below here"
            android:textColor="@color/muted_text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/salonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_format"
                android:drawableStart="@drawable/ic_baseline_title_24"
                android:drawablePadding="11dp"
                android:hint="Salon Name"
                android:inputType="text"
                android:paddingHorizontal="11dp"
                android:paddingVertical="8dp"
                android:textColor="@color/icon_color"
                android:textColorHint="@color/muted_text"
                android:textSize="15sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/ownerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_format"
                android:drawableStart="@drawable/ic_baseline_subtitles_24"
                android:drawablePadding="11dp"
                android:hint="Owner Name"
                android:inputType="text"
                android:paddingHorizontal="11dp"
                android:paddingVertical="8dp"
                android:textColor="@color/icon_color"
                android:textColorHint="@color/muted_text"
                android:textSize="15sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="phone"
                android:background="@drawable/edit_text_format"
                android:drawableStart="@drawable/ic_baseline_phone_android_24"
                android:drawablePadding="11dp"
                android:hint="Phone"
                android:inputType="phone"
                android:maxLength="10"
                android:minEms="10"
                android:paddingHorizontal="11dp"
                android:paddingVertical="8dp"
                android:textColor="@color/icon_color"
                android:textColorHint="@color/muted_text"
                android:textSize="15sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:background="@drawable/edit_text_format"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="11dp"
                android:hint="Email"
                android:importantForAutofill="auto"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="11dp"
                android:paddingVertical="8dp"
                android:textColor="@color/icon_color"
                android:textColorHint="@color/muted_text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/openTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_format"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="11dp"
                android:hint="Opening Time"
                android:paddingHorizontal="11dp"
                android:paddingVertical="8dp"
                android:textColor="@color/icon_color"
                android:textSize="15sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/closeTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_format"
                android:drawableLeft="@drawable/ic_baseline_timer_off_24"
                android:drawablePadding="11dp"
                android:hint="Closing Time"
                android:paddingHorizontal="11dp"
                android:paddingVertical="8dp"
                android:textColor="@color/icon_color"
                android:textSize="15sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="postalAddress"
                android:background="@drawable/edit_text_format"
                android:drawableStart="@drawable/ic_baseline_edit_location_24"
                android:drawablePadding="11dp"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:paddingHorizontal="11dp"
                android:paddingVertical="8dp"
                android:textColor="@color/icon_color"
                android:textColorHint="@color/muted_text"
                android:textSize="15sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChoose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_format"
                    android:drawableStart="@drawable/ic_baseline_add_photo_alternate_24"
                    android:drawablePadding="11dp"
                    android:paddingHorizontal="11dp"
                    android:paddingVertical="3dp"
                    android:paddingRight="21dp"
                    android:text="Profile Image"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/icon_color"
                    android:paddingVertical="3dp"
                    android:text="Upload"
                    android:textColor="#fff"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/photoWarn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please upload Salon photo?"
            android:textColor="@color/danger"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCardView"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="11dp"
            android:visibility="gone"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="21dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/icon_color"
                android:paddingHorizontal="51dp"
                android:paddingVertical="8dp"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>
